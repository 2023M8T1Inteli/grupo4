// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Terapeuta {
  id            String   @id @default(uuid())
  nome_completo String
  email         String
  senha         String
  jogos         Jogos[]
  sessoes       Sessoes[]
}

model Paciente {
  id                 String   @id @default(uuid())
  nome_completo      String
  data_de_nascimento DateTime?
  nome_responsavel   String
  contato_responsavel String
  ficha_medica       String?
  sessoes            Sessoes[]
}

model Jogos {
  id            Int      @id @default(autoincrement())
  nome_jogo     String   
  data_criacao  DateTime @default(now())
  data_edicao   DateTime @updatedAt 
  publico       Boolean
  arquivo       String?
  criador       String   
  sessoes       Sessoes[]

  Terapeuta Terapeuta @relation(fields: [criador], references: [id])
}

model Sessoes {
  id            String   @id @default(uuid())
  Paciente_id   String
  Terapeuta_id  String
  data          DateTime
  Jogos_id      Int

  Paciente  Paciente @relation(fields: [Paciente_id], references: [id])
  Terapeuta Terapeuta @relation(fields: [Terapeuta_id], references: [id])
  Jogos     Jogos    @relation(fields: [Jogos_id], references: [id])
}
